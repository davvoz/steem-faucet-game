rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Funzioni di utilità
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    function canModifyUser(userId) {
      return isOwner(userId) || isAdmin();
    }

    // Regole per documenti utente
    match /users/{userId} {
      // L'utente può leggere il proprio profilo
      allow read: if isOwner(userId) || isAdmin();
      
      // Creazione solo da parte di Firebase Auth o Admin
      allow create: if isOwner(userId) || isAdmin();
      
      // Aggiornamento controllato per campi sensibili
      allow update: if isOwner(userId) && 
                   !request.resource.data.diff(resource.data).affectedKeys()
                    .hasAny(['lastFaucetClaim', 'consecutiveClaims', 'faucetTier', 'totalClaimedAmount', 'isAdmin']);
      
      // Gli admin possono aggiornare tutti i campi
      allow update: if isAdmin();
    }
    
    // Regole per richieste faucet
    match /faucet_claims/{claimId} {
      // Solo l'utente proprietario e gli admin possono leggere le richieste
      allow read: if isSignedIn() && (request.auth.uid == resource.data.userId || isAdmin());
      
      // Creazione controllata: un utente può creare una nuova richiesta solo se:
      // 1. È autenticato
      // 2. userId corrisponde al suo uid
      // 3. Non ha già richieste pendenti (verificato nella funzione claimFaucet)
      // 4. Non ha fatto un claim nelle ultime 24 ore (verificato nella funzione claimFaucet)
      allow create: if isSignedIn() && 
                   request.resource.data.userId == request.auth.uid &&
                   request.resource.data.status == 'pending';
      
      // Solo gli admin possono aggiornare lo stato delle richieste
      allow update: if isAdmin();
    }
    
    // Regole per statistiche
    match /stats/faucet {
      // Tutti possono leggere le statistiche
      allow read: if true;
      
      // Solo gli admin possono modificare le statistiche
      allow write: if isAdmin();
    }
    
    // Regola per tutti gli altri documenti
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}